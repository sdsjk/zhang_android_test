<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.phone.okhttputils.MainActivity">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Hello World!" />

    <Button
        android:id="@+id/get_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="同步GET" />

    <Button
        android:layout_below="@id/get_data"
        android:id="@+id/asynget_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="异步GET" />
    <Button

        android:layout_below="@id/asynget_data"
        android:id="@+id/post_string_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post方式提交字符串" />
    <Button

        android:layout_below="@id/post_string_data"
        android:id="@+id/post_stream_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post方式提交流" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
